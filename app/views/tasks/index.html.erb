<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>
  <div class="row">
    <div class="columns large-3">
      <fieldset>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Hours</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Finished</th>      
      <th>User</th>
      <th>Responsable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
        <% if task.check==false %>    
      <tr>
        <td><%= task.title %></td>
        <td><%= task.hours %></td>
        <td><%= task.start_time %></td>
        <td><%= task.end_time %></td>
        <td><%= task.check %></td>
        <td><%= task.user.name %></td>
        <td><%= task.responsable.name %></td>
        <td><%= link_to 'Show', task %></td>
        <%if user_signed_in? %>
        <%if task.user.id==current_user.id%>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% end %>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>        
      </fieldset>
