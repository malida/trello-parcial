
<h1>Listing tasks</h1>

<div class="columns large-12">
  <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Hours</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Finished</th>      
      <th>User</th>
      <th>Responsable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <% if task.user_id == current_user.id %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.hours %></td>
        <td><%= task.start_time %></td>
        <td><%= task.end_time %></td>
        <td><%= task.check %></td>
        <td><%= task.user.name %></td>
        <td><%= task.responsable.name %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>

<div class="columns large-12">
  <h3>Assigned Tasks:</h3>
  <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Hours</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Finished</th>      
      <th>User</th>
      <th>Responsable</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <% if task.responsable == current_user.id %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.hours %></td>
        <td><%= task.start_time %></td>
        <td><%= task.end_time %></td>
        <td><%= task.check %></td>
        <td><%= task.user.name %></td>
        <td><%= task.responsable.name %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>


